            display: grid;
            grid-template-columns: auto 20%;
            align-items: center;
            padding: 40px 20px;
            text-align: right;
        }
        .footer img {
            display:block;
            width: 40%;
            margin: auto auto auto 0;
        }
        .footer a {
            text-align: right;
            color: white;
            display: block;
        }

        .footer-mobile {
            background-color: #1f2533;
            display: none;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding: 40px 20px;
            text-align: right;
        }
        .footer-mobile img {
            display:block;
            width: 90%;
            margin: 30px auto;
        }
        .footer-mobile a {
            text-align: center;
            color: white;
            display: block;
            margin: 10px;
        }





        @media screen and (max-width:700px) {
            h2 {
                line-height: 45px;
            }
            .other-services {
