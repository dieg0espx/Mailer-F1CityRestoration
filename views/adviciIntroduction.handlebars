            }

            .enum {
                display: block;
                text-align: center;
            }
            .enum h2 {
                text-align: center;
                margin: auto !important;
                margin-bottom: 20px !important;
            }

            .square-row {
                display: block;
                width: 90% !important;
            }

            h4 {
                width: 80% !important;
                margin: auto !important;
                margin-bottom: 30px !important;
            }
            
            .two-col .desktop {
                display: none;
            }
            .two-col .mobile {
                display: block;
                max-width: 90%;
                margin: auto;
            }

            .row {
                height: fit-content !important;
            }
            .button {
                display: block;
            }
        }
    </style>
